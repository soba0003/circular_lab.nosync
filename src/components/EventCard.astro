---
import vibe from "../assets/vibe.png";
const { event } = Astro.props;
import linkArrow from "../assets/link_arrow.svg";
---

<article>
  <h1 class="h1_card">{event.event_title}</h1>
  <img src={vibe.src} alt="" />
  <p class="when_card">
    {event.event_date}
    {event.event_start}-{event.event_end}
  </p>
  <p class="p_card">{event.event_h2}</p>
  <div class="card_links">
    <a class="list_link flex no_line a_card" href=`/event/${event.id}`
      ><img class="arrow" src={linkArrow.src} alt="sort pil mod højre" />Læs
      mere</a
    >
    <a class="list_link flex no_line a_card" href="#"
      ><img class="arrow" src={linkArrow.src} alt="sort pil mod højre" />Tilmeld
      dig eventet</a
    >
  </div>
</article>

<style>
  article {
    border: solid 1px var(--black);
    width: 250px;
    img{
       img{
    aspect-ratio: 1:1;
    width: 100%;
    height: auto;
  }
    }
  }
  .list_link {
    align-items: center;
    gap: 10px;
    margin-top: 5px;
  }
  .arrow {
    height: 17px;
    width: auto;
  }
  .h1_card {
    width: 100%;
    height: auto;
    max-height: 70px;
    background-color: var(--orange);
    color: var(--white);
    padding: 5px 10px;
  }
  .when_card {
    background-color: var(--yellow);
    padding: 2px 10px;
  }
  .p_card {
    padding: 10px 10px;
  }
  .card_links {
    padding: 0 10px 10px 10px;
  }
</style>
