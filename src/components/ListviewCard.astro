---
import linkArrow from "../assets/link_arrow.svg";
import repair from "../assets/repair.jpg";
const { event } = Astro.props;
---

<article class="margin_mobil">
  <img class="list_img" src={repair.src} alt="" />
  <h4 class="h4_list">{event.event_title}</h4>
  <p class="when_card">
    {event.event_date}
    {event.event_start}-{event.event_end}
  </p>
  <p class="when_card">Guldbergsgade</p>
  <p class="description">
    {event.event_h2}
  </p>
  <a class="list_link flex no_line a_card" href=`/event/${event.id}`
    ><img class="arrow" src={linkArrow.src} alt="sort pil mod højre" />Læs mere</a
  >
  <a class="list_link flex no_line a_card" href="#"
    ><img class="arrow" src={linkArrow.src} alt="sort pil mod højre" />Tilmeld
    dig eventet</a
  >
</article>

<style>
  article {
    max-width: 270px;
  }
  .list_link {
    align-items: center;
    gap: 10px;
    margin-top: 10px;
  }
  .arrow {
    height: 17px;
    width: auto;
  }
  .list_img {
    height: 180px;
    width: 270px;
    object-fit: cover;
  }
  h4 {
    margin-top: 20px;
    margin-bottom: 10px;
  }
  .description {
    margin-top: 10px;
    margin-bottom: 30px;
  }
  .when_card {
    margin-top: -4px;
  }
</style>
